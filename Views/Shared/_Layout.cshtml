<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Profescipta_Sales_Order</title>
    @* <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" /> *@
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Profescipta_Sales_Order.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tailwind.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/xlsx/0.17.0/xlsx.full.min.js"></script>
</head>
<body>
    <header>
        <nav class="bg-white border-b shadow mb-3">
            <div class="container mx-auto flex items-center justify-between px-4 py-3">
                <a class="text-lg font-semibold" asp-area="" asp-controller="Home" asp-action="Index">Sales Order</a>
                
            </div>
        </nav>
    </header>

    <div class="container mx-auto px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-t text-gray-600 mt-8 py-4">
        <div class="container mx-auto px-4 text-center">
            &copy; 2024 - Sri Ahmad Tsaqif - <a class="text-blue-500 hover:underline" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    @* <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script> *@
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
